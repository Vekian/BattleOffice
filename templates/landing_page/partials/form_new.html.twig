        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
            <div class="input-field">
                {{ form_widget(form.addressBilling.firstname) }}
                {{ form_label(form.addressBilling.firstname, 'Prénom')}}
                {{ form_errors(form.addressBilling.firstname, {'attr': {'class': 'form-error'}}) }}
            </div>
            <div class="input-field"> 
                {{ form_widget(form.addressBilling.lastname) }}
