                    <div class="input-field">
                    {{ form_widget(form.addressShipping.firstname) }}
                    {{ form_label(form.addressShipping.firstname, 'Prénom')}}
                    {{ form_errors(form.addressShipping.firstname, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field"> 
                    {{ form_widget(form.addressShipping.lastname) }}
                    {{ form_label(form.addressShipping.lastname, 'Nom')}}
                    {{ form_errors(form.addressShipping.lastname, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.address_line1) }}
                    {{ form_label(form.addressShipping.address_line1, 'Adresse')}}
                    {{ form_errors(form.addressShipping.address_line1, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.address_line2) }}
                    {{ form_label(form.addressShipping.address_line2, 'Complément adr.')}}
                    {{ form_errors(form.addressShipping.address_line2, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.city) }}
                    {{ form_label(form.addressShipping.city, 'Ville')}}
                    {{ form_errors(form.addressShipping.city, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.zipcode) }}
                    {{ form_label(form.addressShipping.zipcode, 'Code postal')}}
                    {{ form_errors(form.addressShipping.zipcode, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.country) }}
                    {{ form_label(form.addressShipping.country, 'Pays')}}
                    {{ form_errors(form.addressShipping.country, {'attr': {'class': 'form-error'}}) }}
                </div>
                <div class="input-field">
                    {{ form_widget(form.addressShipping.phone) }}
                    {{ form_label(form.addressShipping.phone, 'Téléphone')}}
                    {{ form_errors(form.addressShipping.phone, {'attr': {'class': 'form-error'}}) }}
                </div>
            </div>
        </li>
    </ul>
    {{ form_end(form) }}
</div>
